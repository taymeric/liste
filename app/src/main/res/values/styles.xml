<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="preferenceTheme">@style/myPreferenceTheme</item>

    </style>

    <!-- Theme for disabling default ActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Toolbar themes -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Required Preferences theme -->
    <style name="myPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:overScrollMode">never</item>
    </style>

    <!-- Specific theme for history activity. -->
    <style name="HistoryTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryHistory</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkHistory</item>
    </style>

    <!-- Specific theme for history activity. -->
    <style name="PreferencesTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPreferences</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPreferences</item>
    </style>

    <style name="ListItemLayout">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="HistoryItemLayout">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

</resources>
