<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="preferenceTheme">@style/myPreferenceTheme</item>
    </style>

    <!-- Theme for disabling default ActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Toolbar themes -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Required Preferences theme -->
    <style name="myPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:overScrollMode">never</item>
    </style>

    <!-- Specific theme for history activity. -->
    <style name="HistoryTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryHistory</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkHistory</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Specific theme for history activity. -->
    <style name="PreferencesTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPreferences</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPreferences</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ListLayout">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="ListLayout.Normal">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="ListLayout.Compact">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>

    <style name="HistoryLayout">
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
    </style>

    <style name="HistoryLayout.Normal">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">24dp</item>

    </style>

    <style name="HistoryLayout.Compact">
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
    </style>

</resources>
